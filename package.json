{
  "name": "vscode-mcp-task-extension",
  "displayName": "VSCode MCP Task Extension",
  "description": "A VSCode extension that provides an embedded Model Context Protocol (MCP) server, enabling AI agents to discover and execute VSCode tasks through standardized MCP tools.",
  "version": "1.0.0",
  "publisher": "mcp-tasks",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpTaskServer.start",
        "title": "Start MCP Task Server"
      },
      {
        "command": "mcpTaskServer.stop",
        "title": "Stop MCP Task Server"
      },
      {
        "command": "mcpTaskServer.restart",
        "title": "Restart MCP Task Server"
      },
      {
        "command": "mcpTaskServer.showLogs",
        "title": "Show MCP Task Server Logs"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MCP Task Server",
      "properties": {
        "mcpTaskServer.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the MCP server to listen on"
        },
        "mcpTaskServer.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable detailed logging"
        },
        "mcpTaskServer.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the MCP server when VSCode starts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "mocha": "^5.2.0",
    "typescript": "^5.8.3",
    "ws": "^8.18.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
